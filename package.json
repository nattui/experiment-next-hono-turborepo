{
  "name": "experiment-next-hono-turborepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "check": "biome check",
    "check:fix": "biome check --unsafe --write",
    "check:format": "prettier --check .",
    "check:format:fix": "prettier --write .",
    "check:type": "turbo check:type",
    "clean": "sh scripts/clean.sh",
    "dev": "turbo dev",
    "start": "turbo start",
    "update": "taze --recursive"
  },
  "prettier": "@nattui/prettier-config",
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@nattui/prettier-config": "^0.0.8",
    "taze": "^19.7.0",
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.2.22",
  "catalog": {
    "eslint": "^9.36.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
