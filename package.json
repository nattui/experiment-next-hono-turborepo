{
  "name": "experiment-next-hono-turborepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "check": "biome check",
    "check:fix": "biome check --unsafe --write",
    "check:package": "sh scripts/sort-package-json.sh",
    "check:type": "turbo check:type",
    "clean": "sh scripts/clean.sh",
    "dev": "turbo dev",
    "start": "turbo start",
    "update": "bun update --interactive --recursive"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.7",
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.3.0",
  "catalog": {
    "typescript": "^5.8.3"
  }
}
