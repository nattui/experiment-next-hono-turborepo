{
  "name": "experiment-next-hono-turborepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "check": "bun run check:format && bun run check:lint",
    "check:fix": "bun run check:format:fix && bun run check:lint:fix",
    "check:format": "prettier --check .",
    "check:format:fix": "prettier --write .",
    "check:lint": "eslint .",
    "check:lint:fix": "eslint --fix .",
    "check:type": "turbo check:type",
    "clean": "sh scripts/clean.sh",
    "dev": "turbo dev",
    "start": "turbo start",
    "update": "bun update --interactive --recursive"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.46.2"
  },
  "packageManager": "bun@1.3.0",
  "catalog": {
    "typescript": "^5.8.3"
  }
}
