{
  "$schema": "https://turborepo.com/schema.json",
  "globalPassThroughEnv": [
    "DATABASE_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_WEB_URL",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "apps/api/.env*", "apps/web/.env*"],
      "outputs": ["!.next/cache/**", ".next/**", "dist/**"]
    },
    "check:type": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
