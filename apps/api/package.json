{
  "name": "api",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/app.d.ts",
      "import": "./dist/app.js"
    }
  },
  "main": "./dist/app.js",
  "module": "./dist/app.js",
  "types": "./dist/app.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run check:type && bun run build:package",
    "build:package": "tsdown",
    "check:type": "tsc",
    "dev": "bun run --hot src/app.ts",
    "dev:package": "tsdown --watch src",
    "start": "bun run dev"
  },
  "dependencies": {
    "argon2": "^0.44.0",
    "db": "workspace:*",
    "drizzle-orm": "catalog:",
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "tsdown": "^0.15.6",
    "typescript": "catalog:"
  }
}
