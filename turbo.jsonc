{
  "$schema": "https://turborepo.com/schema.json",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "apps/api/.env*", "apps/web/.env*"],
      "outputs": ["!.next/cache/**", ".next/**", "dist/**"]
    },
    "check:type": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
